{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <a class="btn btn-info btn-sm justify-content-center" href="{{ path('logout', app.session.has('oidc.id_token') ? {id_token_hint: app.session.get('oidc.id_token')} : {}) }}"
    {% if confirmLogout is defined %}
        onclick="return confirmLogout();"
    {% endif %}>
        <i class="fas fa-sign-out-alt"></i> Logout
    </a>
{% else %}
    <a class="btn btn-info btn-sm justify-content-center" href="{{ path('login') }}">
        <i class="fas fa-sign-in-alt"></i> Login
    </a>
{% endif %}
