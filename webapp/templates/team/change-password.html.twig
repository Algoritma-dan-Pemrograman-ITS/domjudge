{% extends 'team/base.html.twig' %}

{% block title %}Change Password - {{ parent() }}{% endblock %}

{% block content %}
    <div class="container submitform pt-5">
        <h1 class="text-center">Change Password</h1>

        {{ form_start(form) }}
        {{ form_row(form.current_password) }}
        {{ form_row(form.password) }}
        <div class="form-group">
            <button type="submit" class="btn-success btn"><i class="fas fa-key"></i> Change password
            </button>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
